doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Reset Your Password
    style.
      body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
        padding: 20px;
      }
      .container {
        max-width: 450px;
        margin: 0 auto;
        background: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      }
      h2 {
        text-align: center;
        color: #333;
      }
      input {
        width: 100%;
        padding: 12px;
        padding-right: 12px;
        margin-top: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 16px;
        box-sizing: border-box;
        text-align: left;
      }
      button {
        width: 100%;
        margin-top: 20px;
        padding: 12px;
        background-color: #008cff;
        border: none;
        color: #fff;
        font-size: 16px;
        border-radius: 6px;
        cursor: pointer;
      }
      button:hover {
        background-color: #0075db;
      }
      .msg {
        margin-top: 15px;
        text-align: center;
        color: green;
      }
      .error {
        margin-top: 15px;
        text-align: center;
        color: red;
      }

  body
    .container
      h2 Create New Password
      input#password(type="password" placeholder="New Password")
      input#passwordConfirm(type="password" placeholder="Confirm Password")
      button#resetBtn(onclick="resetPass()") Reset Password
      #response

    script.
      let resetDone = false;

      async function resetPass() {
        if (resetDone) return;

        const password = document.getElementById("password").value;
        const passwordConfirm = document.getElementById("passwordConfirm").value;
        const msg = document.getElementById("response");
        const btn = document.getElementById("resetBtn");

        if (!password || !passwordConfirm) {
          msg.innerHTML = `<p class="error">Please fill in all fields</p>`;
          return;
        }

        btn.disabled = true;
        btn.innerText = "Processing...";

        try {
          const token = window.location.pathname.split("/").pop();

          const res = await fetch(`/api/v1/auths/resetPassword/${token}`, {
            method: "PATCH",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ password, passwordConfirm }),
          });

          const data = await res.json();

          if (data.status === "success") {
            msg.innerHTML = `<p class="msg">Password updated successfully! You can now log in.</p>`;
            resetDone = true;
            btn.disabled = true;
            btn.innerText = "Password Updated";
            btn.style.cursor = "not-allowed";
          } else {
            msg.innerHTML = `<p class="error">${data.message}</p>`;
            btn.disabled = false;
            btn.innerText = "Reset Password";
          }
        } catch (err) {
          msg.innerHTML = `<p class="error">Something went wrong. Try again later.</p>`;
          btn.disabled = false;
          btn.innerText = "Reset Password";
        }
      }
